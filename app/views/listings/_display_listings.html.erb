<div class="container">
    <div class="row">
        <% @listings.each do |listing| %>
        <%# display listings if they are still for sale (have not been purchased) %>
        <% if !listing.purchased %>
        <div class="card col-md-6 col-lg-4 border-4">
            <%# display picture on each listing %>
            <% if listing.picture.attached? %>
            <%= image_tag(listing.picture, class: "card-img-top") %>
            <% else %>
            <%= image_tag("dog.png", class: "card-img-top") %> 
            <% end %>
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title"><%= listing.name %></h4>
                    <h4><%= "$#{listing.price}" %></h4>
                </div>
                <p class="card-text text-secondary" id="truncate">
                    <%= listing.description %>
                </p>
                <%= link_to "See more", listing_path(listing.id), class: "btn btn-outline-secondary" %>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>